<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:padding="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:id="@+id/lay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tile_picture0"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:src="@mipmap/card"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"/>

        <ImageButton
            android:id="@+id/btnedit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_edit"
            android:scaleType="center"
            android:layout_alignBottom="@+id/tile_picture0"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/tile_title0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="RHB"
            android:textColor="@color/colorDark"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay2"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/lay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tile_picture1"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:src="@mipmap/card"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"/>

        <ImageButton
            android:id="@+id/btnedit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_edit"
            android:layout_alignBottom="@+id/tile_picture1"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/tile_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="CIMB"
            android:textColor="@color/colorDark"
            android:textSize="18sp"
            android:layout_above="@+id/btnedit1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp" />

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@mipmap/del"
        app:backgroundTint="?attr/colorBackgroundFloating"
        app:layout_anchorGravity="bottom|right|end"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="86dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@mipmap/add"
        app:backgroundTint="?attr/colorBackgroundFloating"
        app:layout_anchorGravity="bottom|right|end"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp" />

</RelativeLayout>

